<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleManuStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:layout_marginTop">@dimen/title_margin_top</item>

    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="TextSettingsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextListSmallStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="AudioPlayerTextLeft">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
    </style>

    <style name="AudioPlayerTextRight">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
    </style>

    <style name="ErrorText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomNavigationViewTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_navigation_view_text_size</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextInputLayoutOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>

    </style>

</resources>